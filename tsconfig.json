{
	"include": ["src/**/*", "jest.config.js", "tests/Integration.test.ts"],
	"exclude": ["node_modules", "**/*.spec.ts"],
	"compilerOptions": {
		"target": "ES6",
		"module": "CommonJS",
		"lib": ["ESNext"],
		"allowJs": true,
		"strict": true,
		"esModuleInterop": true,
		"outDir": "lib",
		"alwaysStrict": true,
		"noImplicitAny": true,
		"noUncheckedIndexedAccess": true,
		"noPropertyAccessFromIndexSignature": true,
	}
}
